
{{#each erros}}
<div class="alert alert-danger">{{texto}}

</div>
{{else}}
{{/each}}
<div class="card">
  <div class="card-body">
    <h4>Nova Postagem:</h4>
    <form action="/admin/postagens/nova", method="post">
      <label for="titulo">Titulo:</label>
      <input type="text" name="titulo" class="form-control"value="">
      <label for="slug">Slug:</label>
      <input type="text" name="slug" class="form-control"value="">
      <label for="descricao">Descricao:</label>
      <input type="text" name="descricao" class="form-control"value="">
      <label for="conteudo">Conteudo:</label>
      <textarea name="conteudo" class="form-control"></textarea>
      <label for="categoria">Categoria:</label>
      <select name="categoria" class="custom-select">
          {{#each categorias}}
          <option value="{{_id}}">{{nome}}</option>

          {{else}}
          <option value="0">Nenhuma Categoria Registrada</option>
          {{/each}}
        </select>

      <button type="submit" class="btn btn-success mt-4">Enviar</button>
    </form>

  </div>

</div>
