<h2>Lista de Categorias: </h2>
<hr>
<a href="/admin/categorias/add">
<button class="btn btn-success">Nova Categoria</button></a>

{{#each categorias}}

<div class="card mt-4">
  <div class="card-body">
    <h4>{{nome}}</h4>
    <small>Slug: {{slug}}</small><br>
    <small>Data de Criação: {{date}}</small>

  <a href="/admin/categorias/edit/{{_id}}"><br><button class="btn btn-secondary mt 4">Editar Categoria</button></a>
  <form action="/admin/categorias/deletar" method="post">
      <input type="hidden" name="id" value="{{_id}}">
      <button type="submit" class="btn btn-danger mt-2">Deletar Categoria</button>
    </form>

</div>
</div>
{{else}}
<h4 class="mt-3">Nenhuma Categoria Registrada!</h4>

{{/each}}
